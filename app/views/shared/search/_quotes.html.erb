<%= form_with url: search_service_orders_path, method: :get do |form| %>
  <div>
    <%= form.label :height, "#{t'.height'}" %><br>
    <%= form.number_field :height, step: :any, placeholder: '(m)' %>
  </div>
  <div>
    <%= form.label :length, "#{t'.length'}" %><br>
    <%= form.number_field :length, step: :any, placeholder: '(m)' %>
  </div>
  <div>
    <%= form.label :width, "#{t'.width'}" %><br>
    <%= form.number_field :width, step: :any, placeholder: '(m)' %>
  </div>
  <div>
    <%= form.label :weight, "#{t'.weight'}" %><br>
    <%= form.number_field :weight, step: :any, placeholder: '(kg)' %>
  </div>
  <div>
    <%= form.label :distance, "#{t'.distance'}" %><br>
    <%= form.number_field :distance, step: :any, placeholder: '(km)' %>
  </div>
  <div>
    <%= form.submit 'Consultar' %>
  </div>
  <% end %>
