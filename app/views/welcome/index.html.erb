<div>
  <% if current_user.admin? %>
  <div>
    <h2><%= link_to 'Transportadoras', transporters_path %></h2>
    <hr>
  </div>
  <div>
    <h2>Consultar orçamentos</h2>
  </div>
  <div>
    <%= form_with url: search_transporters_path, method: :get do |form| %>
      <%= form.number_field :height, step: :any, placeholder: 'Altura do produto (m):' %> |
      <%= form.number_field :length, step: :any, placeholder: 'Comprimento do produto (m):' %> |
      <%= form.number_field :width, step: :any, placeholder: 'Largura do produto (m):' %> |
      <%= form.number_field :weight, step: :any, placeholder: 'Peso do produto (kg):' %> |
      <%= form.number_field :distance, step: :any, placeholder: 'Distância (km):' %><br><br>
      <%= form.submit 'Consultar' %>
    <% end %>
  </div>
  <% else %>
  <h3><%= link_to @transporter.brand_name, @transporter %></h3>

  <div>
    <%= link_to 'Veículos', vehicles_path %>
  </div>
  <% end %>
</div>
